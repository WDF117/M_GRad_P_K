<Window x:Class="M_GRad_P_K.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:oxy="http://oxyplot.org/wpf"
        Title="Оптимальное управление — модель запасов" Width="1200" Height="880">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Параметры -->
        <StackPanel Grid.Column="0" Margin="6" VerticalAlignment="Top">
            <TextBlock Text="Параметры модели" FontSize="16" FontWeight="Bold" Margin="0,0,0,8"/>

            <TextBlock Text="T (время моделирования)" />
            <TextBox x:Name="InputT" Text="250" />

            <TextBlock Text="N (шагов разбиения)" Margin="0,6,0,0" />
            <TextBox x:Name="InputN" Text="1000" />

            <TextBlock Text="a (вес для u)" Margin="0,6,0,0" />
            <TextBox x:Name="InputA" Text="0.03" />

            <TextBlock Text="c (вес для y)" Margin="0,6,0,0" />
            <TextBox x:Name="InputC" Text="0.2" />

            <TextBlock Text="M = z_max (ограничение производства)" Margin="0,6,0,0" />
            <TextBox x:Name="InputM" Text="6" />

            <TextBlock Text="y(0) (начальный запас)" Margin="0,6,0,0" />
            <TextBox x:Name="InputY0" Text="4" />

            <TextBlock Text="z*(t) — плановое производство (z*) (постоянное значение)" Margin="0,6,0,0" />
            <TextBox x:Name="InputZStar" Text="1" />

            <TextBlock Text="y*(t) — плановый запас (y*) (постоянное значение)" Margin="0,6,0,0" />
            <TextBox x:Name="InputYStar" Text="2" />

            <Button Content="Запустить расчёт" Margin="0,12,0,0" Click="RunModel_Click" />

            <Button Content="Сохранить графики (PNG)" Margin="0,8,0,0" Click="SaveCharts_Click" />

            <TextBlock Text="Примечание:" Margin="0,12,0,0" TextWrapping="Wrap"/>
            <!--При необходимости d(t) можно поменять в коде-->
            <TextBlock Text="Дефолтная функция спроса d(t)=0.001·t" TextWrapping="Wrap" FontStyle="Italic" FontSize="12"/>
        </StackPanel>

        <!-- Графики (3 штуки: y, u, H) -->
        <Grid Grid.Column="1" Margin="6">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <oxy:PlotView x:Name="PlotY" Grid.Row="0" Margin="6"/>
            <oxy:PlotView x:Name="PlotU" Grid.Row="1" Margin="6"/>
            <oxy:PlotView x:Name="PlotH" Grid.Row="2" Margin="6"/>
        </Grid>
    </Grid>
</Window>
