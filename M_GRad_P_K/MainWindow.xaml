<Window x:Class="M_GRad_P_K.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:M_GRad_P_K"
        mc:Ignorable="d"
         xmlns:oxy="http://oxyplot.org/wpf"
        Title="Модель оптимального управления" 
        Width="1100" Height="800">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Панель параметров -->
        <StackPanel Grid.Column="0" Margin="10" VerticalAlignment="Top">
            <TextBlock Text="Параметры модели" FontSize="18" FontWeight="Bold" Margin="0,0,0,8"/>

            <TextBlock Text="d0 (начальный спрос)" />
            <TextBox x:Name="InputD0" Text="2.0"/>

            <TextBlock Text="c (рост спроса)" />
            <TextBox x:Name="InputC" Text="0.02"/>

            <TextBlock Text="z_max (ограничение управления)" />
            <TextBox x:Name="InputZmax" Text="6.0"/>

            <TextBlock Text="T (время моделирования)" />
            <TextBox x:Name="InputT" Text="250"/>

            <TextBlock Text="N (количество шагов)" />
            <TextBox x:Name="InputN" Text="1000"/>

            <Separator Margin="0,8,0,8"/>

            <TextBlock Text="G (коэффициент взаимодействия)" />
            <TextBox x:Name="InputG" Text="0.3"/>

            <TextBlock Text="Y (параметр Y)" />
            <TextBox x:Name="InputY" Text="0.7"/>

            <TextBlock Text="GAMMA (источник для x1)" />
            <TextBox x:Name="InputGamma" Text="0.25"/>

            <TextBlock Text="NEY (затухание x2)" />
            <TextBox x:Name="InputNEy" Text="0.4"/>

            <TextBlock Text="x1(0) (начальное x)" />
            <TextBox x:Name="InputX0" Text="0.0"/>

            <Separator Margin="0,8,0,8"/>

            <Button Content="Запустить расчёт" Margin="0,6,0,0" Click="RunModel_Click"/>
            <Button Content="Сохранить графики" Margin="0,6,0,0" Click="SaveCharts_Click"/>
        </StackPanel>


        <!-- Графики -->
        <Grid Grid.Column="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- x1 -->
            <oxy:PlotView x:Name="PlotX1" Grid.Row="0"/>

            <!-- u(t) -->
            <oxy:PlotView x:Name="PlotU" Grid.Row="1"/>

            <!-- H(t) -->
            <oxy:PlotView x:Name="PlotH" Grid.Row="2"/>
        </Grid>
    </Grid>
</Window>
